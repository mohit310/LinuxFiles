# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +20% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -20% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute 1 toggle

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

#logout and shutdown - i3-exit in bin directory
bindsym $mod+l exec --no-startup-id i3lock --color=87ceeb
bindsym XF86PowerOff exec ~/bin/i3-exit
bindsym $mod+n exec --no-startup-id thunar

#exec_always --no-startup-id ~/bin/polybar.sh
exec xautolock -time 10 -locker i3lock -corners 000-


